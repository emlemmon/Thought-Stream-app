<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thoughtstream">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThoughtStreamApp">
        <activity
            android:name="com.example.thoughtstream.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.thoughtstream.TimerActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.example.thoughtstream.NewThoughtActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>